{
  "name": "vue-task-dashboard",
  "version": "1.0.0",
  "type": "module",
  "description": "A professional task management dashboard built with Vue 3, TypeScript, and Pinia",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "cypress run",
    "test:e2e:dev": "cypress open",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "build:analyze": "vite-bundle-analyzer"
  },
  "dependencies": {
    "vue": "^3.3.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "axios": "^1.4.0",
    "@vueuse/core": "^10.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.0",
    "@vue/tsconfig": "^0.4.0",
    "typescript": "^5.0.0",
    "vue-tsc": "^1.4.0",
    "vite": "^4.3.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "vitest": "^0.32.0",
    "@vue/test-utils": "^2.3.0",
    "cypress": "^12.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.0"
  }
}